<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/user_num"
            android:gravity="center"
            android:fontFamily="@font/armata"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/ladder_line"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="30dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            />


    <ImageView
            android:id="@+id/user_avatar"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintLeft_toRightOf="@id/user_num"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ladder_line"  android:layout_marginBottom="8dp"
    />

    <TextView
            android:id="@+id/user_name"
            android:textColor="#234C6E"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/armata"
            android:textSize="15sp"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ladder_line"
            app:layout_constraintLeft_toRightOf="@id/user_avatar"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/user_content"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_gravity="right"
            android:fontFamily="@font/armata"
            android:textSize="15sp"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ladder_line"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:shadowColor="#00000000"/>

    <View
            android:id="@+id/ladder_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

