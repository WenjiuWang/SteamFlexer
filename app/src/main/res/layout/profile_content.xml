<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideInset">

    <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <GridLayout
                android:id="@+id/mainGrid"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <!-- Profile Info Card. -->
            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Profile Info"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="18sp" android:textStyle="bold"
                            android:layout_marginTop="5dp"/>

                    <ImageView
                            android:id="@+id/steam_years_badge"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:layout_width="150px"
                            android:layout_height="150px"/>


                    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                  android:background="#A4A4A4"></LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:background="#EEEEEE"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                    android:text="Public profile"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Steam since"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Steam years"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>


                            <TextView
                                    android:text="Friends"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Status"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp" android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/if_public"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/steam_since"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/steam_years"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>


                            <TextView
                                    android:id="@+id/steam_friends"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/steam_status"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Game stats Card. -->
            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Game Stats"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="18sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>

                    <TextView
                            android:id="@+id/game_badge_title"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="10sp"
                            android:textStyle="italic"
                    />

                    <ImageView
                            android:id="@+id/steam_game_badge"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150px"
                            android:layout_height="150px"/>

                    <TextView
                            android:id="@+id/steam_game_num"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10sp"
                    />


                    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                  android:background="#A4A4A4"></LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:background="#EEEEEE"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content" android:layout_height="wrap_content">


                            <TextView
                                    android:text="World Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Region Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Country Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp" android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/game_world_rank"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/game_region_rank"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/game_country_rank"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Level stats Card. -->
            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Level Stats"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="18sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>

                    <ImageView
                            android:id="@+id/steam_level_badge"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/steam_level_xp"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="10sp"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>


                    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                  android:background="#A4A4A4"></LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:background="#EEEEEE"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                    android:text="Badges"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="World Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Region Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Country Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp" android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/badges"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/xp_world_rank"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/xp_region_rank"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/xp_country_rank"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Playtime stats Card. -->
            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Playtime Stats"
                            android:textColor="#000000"
                            app:fontFamily="@font/armata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" android:textSize="18sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                  android:background="#A4A4A4"></LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:background="#EEEEEE"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                    android:text="Total Playtime"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Avg.Playtime"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="World Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:text="Region Rank"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>


                            <TextView
                                    android:text="Country Rank"
                                    android:layout_margin="5sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp" android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/total_time"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/avg_time"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/time_world_rank"
                                    android:layout_margin="5sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/time_region_rank"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                                          android:background="#A4A4A4"></LinearLayout>

                            <TextView
                                    android:id="@+id/time_country_rank"
                                    android:layout_margin="5sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </GridLayout>

    </LinearLayout>

</ScrollView>
